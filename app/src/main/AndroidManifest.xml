<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.jalinfotec.kankoannai">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Tell the system this app requires OpenGL ES 2.0. -->
    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

    <!-- rear facing cam -->
    <uses-feature
            android:name="android.hardware.camera"
            android:required="true" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".wikitude.WikitudeMainActivity">
        </activity>
        <activity android:name=".KankoMainActivity1">
        </activity>
        <activity android:name=".KankoMainActivity2">

            <!-- intetfilterが動かす画面の対象になる -->

        </activity>
        <activity android:name=".TopMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AirportGuideActivity"></activity>
        <!-- wikitude -->
        <activity android:name=".wikitude.WikitudeMainActivity" tools:ignore="DuplicateActivity"></activity>
        <!-- Image Tracking -->
        <activity
                android:name=".wikitude.tracking.image.SimpleImageTrackingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.tracking.image.ExtendedImageTrackingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.tracking.image.MultipleTargetsImageTrackingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <!-- Cloud Recognition -->
        <activity
                android:name=".wikitude.tracking.cloud.ContinuousCloudRecognitionActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.tracking.cloud.SingleCloudRecognitionActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <!-- Instant Tracking -->
        <activity
                android:name=".wikitude.tracking.instant.InstantTrackingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.tracking.instant.InstantScenePickingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.tracking.instant.SaveInstantTargetActivity"

                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.tracking.instant.LoadInstantTargetActivity"

                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity android:name=".wikitude.tracking.instant.PlaneDetectionActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:screenOrientation="fullSensor"/>
        <!-- Object Tracking -->
        <activity
                android:name=".wikitude.tracking.object.ObjectTrackingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.tracking.object.ExtendedObjectTrackingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <!-- Rendering -->
        <activity
                android:name=".wikitude.rendering.external.ExternalRenderingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.rendering.internal.InternalRenderingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <!-- Plugins -->
        <activity
                android:name=".wikitude.plugins.BarcodePluginActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.plugins.FaceDetectionPluginActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.plugins.SimpleInputPluginActivity"

                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <activity
                android:name=".wikitude.plugins.CustomCameraPluginActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>
        <!-- Camera Control -->
        <activity
                android:name=".wikitude.camera.CameraSettingsActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="fullSensor"/>

        <meta-data android:name="com.google.ar.core" android:value="optional" />
    </application>
</manifest>