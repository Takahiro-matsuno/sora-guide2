<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TopMenuActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp" app:srcCompat="@drawable/topimage" android:id="@+id/newsImage"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"/>


    <Button
            android:text="広告エリア"
            android:layout_width="match_parent"
            android:layout_height="71dp" android:id="@+id/affiliate"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newsImage" app:layout_constraintVertical_bias="1.0"/>
    <ImageButton
            android:layout_width="185dp"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_local_airport_black_24dp"
            android:id="@+id/airport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/affiliate" app:layout_constraintVertical_bias="0.00999999"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="185dp"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_local_taxi_black_24dp"
            android:id="@+id/taxi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/affiliate" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="185dp"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_flight_takeoff_black_24dp"
            android:id="@+id/flight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/affiliate" app:layout_constraintVertical_bias="0.008"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:layout_width="185dp"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_pin_drop_black_24dp"
            android:id="@+id/sightseeing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/affiliate" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>