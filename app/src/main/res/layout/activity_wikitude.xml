<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".wikitude.WikitudeActivity"
>

    <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <Button
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="画像認識"
                    android:layout_weight="1"
            />

        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <Button
                    android:id="@+id/geo08_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PoiAtLocation"
                    android:textSize="12sp"
                    android:layout_weight="1"
            />
            <Button
                    android:id="@+id/geo08_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PoiWithLbl"
                    android:textSize="12sp"
                    android:layout_weight="1"
            />
            <Button
                    android:id="@+id/geo08_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MultiPois"
                    android:textSize="12sp"
                    android:layout_weight="1"
            />
            <Button
                    android:id="@+id/geo08_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SelectPois"
                    android:textSize="12sp"
                    android:layout_weight="1"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <Button
                    android:id="@+id/geo10_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="リロード"
                    android:layout_weight="1"
            />
            <Button
                    android:id="@+id/geo10_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="詳細"
                    android:layout_weight="1"
            />

        </TableRow>
        <TableRow>
            <Button
                    android:id="@+id/geo11_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="特定位置に画像表示"
                    android:layout_weight="1"
            />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>