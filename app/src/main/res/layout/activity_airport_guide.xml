<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AirportGuideActivity" android:orientation="vertical" tools:layout_editor_absoluteY="81dp">


    <android.support.design.widget.TabLayout
            android:layout_width="352dp"
            android:layout_height="30dp"
            android:layout_marginBottom="292dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/tabLayout2"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

        <android.support.design.widget.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="店舗"/>
        <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tabItem" android:text="施設"/>
    </android.support.design.widget.TabLayout>
    <ImageView
            android:layout_width="368dp"
            android:layout_height="169dp" app:srcCompat="@drawable/floormap"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tabLayout2" app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintVertical_bias="0.03" android:scaleType="fitCenter"/>
    <ListView
            android:layout_width="358dp"
            android:layout_height="261dp" app:layout_constraintTop_toBottomOf="@+id/tabLayout2"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/listView"/>
</android.support.constraint.ConstraintLayout>